-- Anti-Cheat Check Notification
local function antiCheatCheck()
    local dots = {"", ".", "..", "..."}
    local startTime = os.time()
    
    while os.time() - startTime < 15 do
        for i = 1, 4 do
            game:GetService("StarterGui"):SetCore("SendNotification", {
                Title = "System",
                Text = "Checking anticheat"..dots[i],
                Duration = 0.5,
                Icon = "rbxassetid://0"
            })
            wait(0.5)
        end
    end
    
    game:GetService("StarterGui"):SetCore("SendNotification", {
        Title = "System",
        Text = "Done loading script",
        Duration = 5,
        Icon = "rbxassetid://0"
    })
end

-- Run the anti-cheat check first
antiCheatCheck()

-- Wait a moment before showing GUI
wait(1)

--[[
    GUI Script Restyled by Gemini
    Original functionality remains unchanged.
    Improvements include:
    - A modern, dark theme with an accent color.
    - An animated gradient background for a dynamic effect.
    - Enhanced tweening for smoother button interactions and an intro animation.
    - Cleaner code structure with theme variables.
]]

-- Services
local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local Players = game:GetService("Players")

-- Theme Configuration (Customize your style here!)
local Theme = {
    Background = Color3.fromRGB(21, 22, 28),
    Primary = Color3.fromRGB(34, 36, 46),
    Secondary = Color3.fromRGB(45, 48, 62),
    Accent = Color3.fromRGB(118, 95, 246),
    AccentDark = Color3.fromRGB(90, 70, 210),
    Text = Color3.fromRGB(230, 230, 245),
    MutedText = Color3.fromRGB(160, 160, 180),
    Success = Color3.fromRGB(80, 255, 150),
    Warning = Color3.fromRGB(255, 220, 100),
    Error = Color3.fromRGB(255, 100, 100),

    FontBold = Enum.Font.GothamBold,
    FontMedium = Enum.Font.GothamSemibold,
    FontRegular = Enum.Font.Gotham,

    Rounding = UDim.new(0, 8),
    StrokeThickness = 1
}

-- Main GUI Setup
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "ShecklesDupeGUI_V2"
ScreenGui.Parent = Players.LocalPlayer:WaitForChild("PlayerGui")
ScreenGui.ResetOnSpawn = false

-- Sound Setup
local Sound = Instance.new("Sound")
Sound.SoundId = "rbxassetid://131886985"
Sound.Volume = 0.5
Sound.Parent = ScreenGui

-- Main Frame
local MainFrame = Instance.new("Frame")
MainFrame.Name = "MainFrame"
MainFrame.Size = UDim2.new(0, 340, 0, 300)
MainFrame.Position = UDim2.new(0.5, 0, 0.5, 0)
MainFrame.AnchorPoint = Vector2.new(0.5, 0.5)
MainFrame.BackgroundColor3 = Theme.Background
MainFrame.BorderSizePixel = 0
MainFrame.ClipsDescendants = true
MainFrame.Parent = ScreenGui

local UICorner = Instance.new("UICorner", MainFrame)
UICorner.CornerRadius = Theme.Rounding

local UIStroke = Instance.new("UIStroke", MainFrame)
UIStroke.Color = Theme.Primary
UIStroke.Thickness = Theme.StrokeThickness + 1

-- Animated Gradient Background
local UIGradient = Instance.new("UIGradient", MainFrame)
UIGradient.Color = ColorSequence.new({
    ColorSequenceKeypoint.new(0, Theme.Primary),
    ColorSequenceKeypoint.new(0.5, Theme.Background),
    ColorSequenceKeypoint.new(1, Theme.Primary)
})
UIGradient.Rotation = 45
UIGradient.Transparency = NumberSequence.new(0)

-- Coroutine to animate the gradient for a "moving shit" effect
coroutine.wrap(function()
    while MainFrame.Parent do
        TweenService:Create(UIGradient, TweenInfo.new(3, Enum.EasingStyle.Linear), {Offset = Vector2.new(1, 0)}):Play()
        wait(3)
        UIGradient.Offset = Vector2.new(-1, 0)
        TweenService:Create(UIGradient, TweenInfo.new(3, Enum.EasingStyle.Linear), {Offset = Vector2.new(0, 0)}):Play()
        wait(3)
    end
end)()

-- Title Bar
local TitleBar = Instance.new("Frame")
TitleBar.Name = "TitleBar"
TitleBar.Size = UDim2.new(1, 0, 0, 40)
TitleBar.BackgroundColor3 = Theme.Primary
TitleBar.BackgroundTransparency = 0.5
TitleBar.BorderSizePixel = 0
TitleBar.Parent = MainFrame

local Title = Instance.new("TextLabel", TitleBar)
Title.Name = "Title"
Title.Text = "SHEKELS DUPE"
Title.Size = UDim2.new(1, -40, 1, 0)
Title.Position = UDim2.new(0, 15, 0, 0)
Title.BackgroundTransparency = 1
Title.TextColor3 = Theme.Text
Title.Font = Theme.FontBold
Title.TextSize = 18
Title.TextXAlignment = Enum.TextXAlignment.Left

-- Add a gradient to the title text for extra style
local TitleGradient = Instance.new("UIGradient", Title)
TitleGradient.Color = ColorSequence.new({
    ColorSequenceKeypoint.new(0, Theme.Accent),
    ColorSequenceKeypoint.new(1, Theme.Text)
})
TitleGradient.Rotation = 90

